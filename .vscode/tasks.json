{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Docker Images",
            "type": "shell",
            "command": "docker-compose build",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Build: Frontend Dev",
            "group": "build",
            "dependsOn": [
                "Build: tsc",
                "Build: node_modules"
            ]
        },
        {
            "label": "Build: tsc",
            "type": "typescript",
            "tsconfig": "client/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Build: node_modules",
            "type": "shell",
            "command": "npm i",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/client/"
            }
        },
        {
            "label": "Build: Api Dev",
            "group": "build",
            "dependsOn": [
                "Build: go"
            ]
        },
        {
            "label": "Build: go",
            "type": "shell",
            "command": "go mod tidy",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/server/"
            }
        }
    ]
}